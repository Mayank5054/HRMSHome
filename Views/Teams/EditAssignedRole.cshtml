@using HRMS.Models;
@model TeamsDetail

<h3>@Model.Employee.FirstName @Model.Employee.LastName</h3>
<h3>@Model.Team.TeamName</h3>

@using (Html.BeginForm("EditAssignedRole", "Teams", FormMethod.Post))
{
    @Html.HiddenFor(x => x.TeamMemberId);
    @Html.HiddenFor(X => X.TeamId);
    @Html.HiddenFor(x => x.EmployeeId);


    <div class="form-floating mt-3 mb-3 ">

        @Html.TextBoxFor(model => model.AssignedRole, new { @class = "form-control", style = "max-width:100%;height:50px !important", placeholder = "" })
        @Html.LabelFor(model => model.AssignedRole, htmlAttributes: new { @class = "control-label" })
        @Html.ValidationMessageFor(model => model.AssignedRole, "", new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn-success">Add New User</button>
}
