    function deleteProduct(id) {
        console.log($(this))
        $.ajax({
            method: "GET",
            url: "/Director/DeleteEmployee/" + id,
            success: function (data) {
                console.log($(this))
                console.log(data);
                if (data.status == "Success") {
                    $(`#${id}`).remove();
