@using HRMS.Models
@model Task
<p>
    <h3>Edit Task Details</h3>
</p>
@using (Html.BeginForm("EditTask", "Director", FormMethod.Post, new
{
    @id = "AddTaskForm"
}))
{
    @Html.TextBoxFor(m => m.TaskId, new { type = "hidden" })
    @*@Html.TextBoxFor(m => m.TaskDate, "{0:yyyy-MM-dd}", new
        {
        type = "date"
        })

    <p>TaskName</p>
    @Html.TextBoxFor(x => x.TaskName)
    <p>TaskDescription</p>
    @Html.TextBoxFor(x => x.TaskDescription)*@

<div class="form-floating mt-3 mb-3 ">

    @Html.TextBoxFor(m => m.TaskDate, "{0:yyyy-MM-dd}", new
{
    type = "date",
    @class = "form-control"
})

    @Html.LabelFor(model => model.TaskDate, htmlAttributes: new { @class = "control-label" })
    @*@Html.TextBoxFor(model => model.BookTitle, new { @class = "form-control", style = "max-width:100%" })*@
    @Html.ValidationMessageFor(model => model.TaskDate, "", new { @class = "text-danger" })
</div>
    <div class="form-floating mt-3 mb-3">

        @Html.TextBoxFor(model => model.TaskName, new { id = "Email", @class = "form-control", style = "max-width:100%" })
        @Html.LabelFor(model => model.TaskName, htmlAttributes: new { @class = "control-label" })
        @Html.ValidationMessageFor(model => model.TaskName, "", new { @class = "text-danger" })
    </div>
    <div class="form-floating mt-3 mb-3">

        @Html.TextBoxFor(model => model.TaskDescription, new { id = "Email", @class = "form-control", style = "max-width:100%" })
        @Html.LabelFor(model => model.TaskDescription, htmlAttributes: new { @class = "control-label" })
        @Html.ValidationMessageFor(model => model.TaskDescription, "", new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn-info">Submit</button>
}