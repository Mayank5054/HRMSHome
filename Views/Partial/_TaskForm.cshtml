
@using HRMS.Models
@model Task
@{
    string formId = (ViewBag.Operation == "Edit") ? "EditTaskForm" : "AddTaskForm";
}
<p>
    <h3>
        @(ViewBag.Operation == "Edit" ? "Edit Task" : "Add Task")
    </h3>
</p>

@using (Html.BeginForm("", "", FormMethod.Post, new
{
@id = formId
}))
{
    if(ViewBag.Operation == "Edit")
                {
                    @Html.HiddenFor(x => x.TaskId);
                }
    <div class="form-floating mt-3 mb-3 ">
        @Html.TextBoxFor(x => x.TaskDate, "{0:yyyy-MM-dd}", new
   {
       type = "date",
       @class = "form-control",
       style = "height:50px !important"
   })
        @*<input type="date" name="TaskDate" class="form-control" style="height:50px !important" />*@
        <label class="control-label"> Create Date</label>
        @*@Html.TextBoxFor(model => model.BookTitle, new { @class = "form-control", style = "max-width:100%" })*@
        @Html.ValidationMessageFor(model => model.TaskDate, "", new { @class = "text-danger" })
    </div>
    <div class="form-floating mt-3 mb-3">
        @Html.TextBoxFor(model => model.TaskName, new {  @class = "form-control", style = "max-width:100%;height:50px !important", placeholder = "" })
        @Html.LabelFor(model => model.TaskName, htmlAttributes: new { @class = "control-label" })
        @Html.ValidationMessageFor(model => model.TaskName, "", new { @class = "text-danger" })
    </div>
    <div class="form-floating mt-3 mb-3">
        @Html.TextBoxFor(model => model.TaskDescription, new {  @class = "form-control", style = "max-width:100%;height:50px !important", placeholder = "" })
        @Html.LabelFor(model => model.TaskDescription, htmlAttributes: new { @class = "control-label" })
        @Html.ValidationMessageFor(model => model.TaskDescription, "", new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
}

<script>

</script>